<%- include header.ejs %>
<div class="cars">

  <h2>Mina bokningar</h2>

  <div class="divTable">
    <div class="divTableBody">
      <div class="divTableHeading">
        <div class="divTableHead">Märke</div>
        <div class="divTableHead">Automat</div>
        <div class="divTableHead">Takräcke</div>
        <div class="divTableHead">Pris</div>
        <div class="divTableHead">Bokad</div>
        <div class="divTableHead">Bokad från</div>
        <div class="divTableHead">Bokad till</div>
        <div class="divTableHead">Boka</div>
        <div class="divTableHead">Avboka</div>
      </div>

      <% for (var i = 0; i < userbooking.length; i++) { 

        

        var dateFrom = moment(userbooking[i].date_from).format('YYYY-MM-DD');
        var dateTo = moment(userbooking[i].date_to).format('YYYY-MM-DD');

        if(userbooking[i].user_id == user_id) {
      %>

        <div class="divTableRow">
          <form data-edit="true" action="/min-sida" method="post" class="green" >
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="car_id" value="<%= userbooking[i].car_id %>">
            <input type="hidden" name="user_id" value="<%= user_id %>">

            <div class="divTableCell">
              <span>
                <% if (userbooking[i].res_doc[0].typ == 'volvo') { %>Volvo<% } %>
                <% if (userbooking[i].res_doc[0].typ == 'saab') { %>Saab<% } %>
                <% if (userbooking[i].res_doc[0].typ == 'mercedes') { %>Mercedes<% } %>
                <% if (userbooking[i].res_doc[0].typ == 'audi') { %>Audi<% } %>
              </span>
            </div>
            <div class="divTableCell">
              <span>
                <% if (userbooking[i].res_doc[0].automat == false) { %>Nej<% } else { %>Ja<% } %>
              </span>
            </div>
            <div class="divTableCell">
              <span>
                <% if (userbooking[i].res_doc[0].rail == false) { %>Nej<% } else { %>Ja<% } %>
              </span>
            </div>
            <div class="divTableCell">
              <span><%= userbooking[i].res_doc[0].price %></span>
            </div>
            <div class="divTableCell">
              <span name="booked">
                Ja
              </span>
            </div>
            <div class="divTableCell">
              <input type="date" name="date_from" value="<%= dateFrom %>" disabled>
            </div>
            <div class="divTableCell">
              <input type="date" name="date_to" value="<%= dateTo %>" disabled>
            </div>
            <div class="divTableCell">

              <input type="submit" value="Boka" data-meth="POST" disabled>

            </div>
            <div class="divTableCell">
              <input type="submit" value="Avboka" data-meth="DELETE">
            </div>

          </form>
        </div>       
        <% }} %>

      </div>

	  <a href="/boka-bil">Boka bil</a>
    </div>
    <a href="/user/logout">Logout</a>
  </div>


  <script src="/js/jquery-3.1.1.min.js" type="text/javascript"></script>
  <script src="/js/main.js" type="text/javascript"></script>

  <%- include footer.ejs %>
