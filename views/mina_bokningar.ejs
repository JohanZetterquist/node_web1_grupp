<h2>Mina bokningar</h2>


<div class="divTable">
  <div class="divTableBody">
    <div class="divTableHeading">
      <div class="divTableHead">Märke</div>
      <div class="divTableHead">Automat</div>
      <div class="divTableHead">Takräcke</div>
      <div class="divTableHead">Pris</div>
      <div class="divTableHead">Bokad</div>
      <div class="divTableHead divTableHeadDate">Boka från</div>
      <div class="divTableHead divTableHeadDate">Boka till</div>
      <div class="divTableHead">Avboka</div>
    </div>


    <% for (var i = 0; i < allcars.length; i++) {

      var car_booked = 0;  //0 = ingen bokning, 1 = av någon annan, 2 = av användaren
      var car_class = '';

      if (allcars[i].booked) {
        if (user_id == allcars[i].booked) {
          car_booked = 2;        
      %>

      <div class="divTableRow">
        <form data-edit="true" action="/min-sida" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="car_id" value="<%= allcars[i]._id %>">
          <input type="hidden" name="user_id" value="<%= user_id %>">     

          <div class="divTableCell">
            <span>
              <% if (allcars[i].typ == 'volvo') { %>Volvo<% } %>
              <% if (allcars[i].typ == 'saab') { %>Saab<% } %>
              <% if (allcars[i].typ == 'mercedes') { %>Mercedes<% } %>
              <% if (allcars[i].typ == 'audi') { %>Audi<% } %>
            </span>
          </div>
          <div class="divTableCell">
            <span>
              <% if (allcars[i].automat == false) { %>Nej<% } else { %>Ja<% } %>
            </span>
          </div>
          <div class="divTableCell">
            <span>
              <% if (allcars[i].rail == false) { %>Nej<% } else { %>Ja<% } %>
            </span>
          </div>
          <div class="divTableCell">
            <span><%= allcars[i].price %></span>
          </div>
          <div class="divTableCell">
            <span name="booked">
              <%
              if (car_booked === 0) {
                %>Ledig<%
              } else if (car_booked === 1) {
                %>Upptagen<%
              } else if (car_booked === 2) {
                %>Ja<%
              }
              %>
            </span>
          </div>
          <div class="divTableCell">
            <input type="date" name="date_from" <% if (car_booked !== 0) { %>disabled<% } %>>
          </div>
          <div class="divTableCell">
            <input type="date" name="date_to" <% if (car_booked !== 0) { %>disabled<% } %>>
          </div>
          <div class="divTableCell">
            <input type="submit" value="Avboka" data-meth="DELETE" <% if (car_booked !== 2) { %>disabled<% } %> >
          </div>

        </form>
      </div>

      <%    
          } 
        }
      } 
      %>
    </div>
  </div>